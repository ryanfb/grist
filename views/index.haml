%html{html_attrs('en')}
  %head
    %meta{ 'http-equiv' => 'content-type', 'content' => 'text/html;charset=UTF-8' }
    %title Grist.
  %body
    %p
      Hello, #{github_user.name}. You have #{gists.length} gists.
    %ul
      - for gist in gists
        %li
          #{gist.metadata["git_pull_url"]} - #{gist.id}
